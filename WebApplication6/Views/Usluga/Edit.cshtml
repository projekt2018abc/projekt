@model ProjektZespolowy.Models.MyModels.Usluga

@{
    ViewData["Title"] = "Edycja usługi";
}


<div class="register">
    <section class="register-wrapper">
        <h2>Edycja Usługi</h2>
        <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UslugaId" />
                    <div class="form-group">
                        <label asp-for="TypUslugi" class="control-label">Typ usługi</label>
                        <input asp-for="TypUslugi" class="form-control" />
                        <span asp-validation-for="TypUslugi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cena" class="control-label">Cena</label>
                        <input asp-for="Cena" class="form-control" />
                        <span asp-validation-for="Cena" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PunktyZysk" class="control-label">Punkty zysk</label>
                        <input asp-for="PunktyZysk" class="form-control" />
                        <span asp-validation-for="PunktyZysk" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PunktyKoszt" class="control-label">Punkty koszt</label>
                        <input asp-for="PunktyKoszt" class="form-control" />
                        <span asp-validation-for="PunktyKoszt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Zapisz" class="btn btn-default" />
                    </div>
                </form>

        <div>
            <a asp-action="Index">Wróć do listy usług</a>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
