@model ProjektZespolowy.Models.MyModels.Rezerwacja

@{
    ViewData["Title"] = "Tworzenie rezerwacji";
}

<div class="register">
    <section class="register-wrapper">
        <h2>Tworzenie</h2>

        <h4>Rezerwacja</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Data</label>
                <input asp-for="Date" class="form-control" />
                @Html.DropDownList("myjnie")
                <p style="color:red; ">@ViewBag.blad</p>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </form>

        <div>
            <a asp-action="Index">Wróć do listy rezerwacji</a>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
