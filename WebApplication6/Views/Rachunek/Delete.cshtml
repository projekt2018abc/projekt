@model ProjektZespolowy.Models.MyModels.Rachunek

@{
    ViewData["Title"] = "Usuwanie rachunku";
}


<div class="register">
    <section class="register-wrapper">
        <h2>Usuń rachunek</h2>

        <h3>Czy jesteś pewien?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Data:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Data)
                </dd>
                <dt>
                    Paragon:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Paragon)
                </dd>
            </dl>

            <form asp-action="Delete" class="details-bottom-nav">
                <input type="hidden" asp-for="RachunekId" />
                <input type="submit" value="Usuń" class="btn btn-default" /> |
                <a asp-action="Index">Wróć do listy rachunków</a>
            </form>
        </div>
    </section>
</div>